@model IEnumerable<GoldenTicket.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.customerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataResponded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.closed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.closed == true)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.customerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataResponded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.closed)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id = item.ticketID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ticketID })
        </td>
    </tr>
    }
    else
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.customerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataResponded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.closed)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ticketID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ticketID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ticketID })
            </td>
        </tr>
        }
    }

</table>
